# Используем официальный образ node как базовый образ
FROM node:18.16.0-alpine

# Устанавливаем директорию приложения внутри контейнера
WORKDIR /app

# Копируем package.json и package-lock.json в директорию контейнера
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем все файлы приложения в директорию контейнера
COPY . .

# Собираем React-приложение
RUN npm run build

# Устанавливаем serve глобально внутри контейнера
RUN npm install -g serve

# Задаем команду для запуска serve после запуска контейнера
CMD ["serve", "-s", "build"]

# Открываем порт для доступа к приложению
EXPOSE 30000
